@{
    ViewData["Title"] = "Messaging App";
}

<section style="background-color: #f3f3f3;">
    <div class="container py-5">
        <div class="row">
            <!-- Sidebar for Conversations -->
            <div class="col-md-4 col-lg-3">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body">
                        <h5 class="card-title">Conversations</h5>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Search Conversations" aria-label="Search">
                            <button class="btn btn-outline-secondary" type="button"><i class="fas fa-search"></i></button>
                        </div>

                        <!-- List of conversations -->
                        <ul class="list-group">
                            @foreach (var conversation in Model.Conversations)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a href="/Home/ConversationDetails?conversationId=@conversation.Id" class="text-decoration-none">
                                        <div class="d-flex align-items-center">
                                            <img src="https://via.placeholder.com/40" alt="Avatar" class="rounded-circle me-3">
                                            <div>
                                                <h6 class="mb-0">@conversation.Name</h6>
                                                <small class="text-muted">@conversation.LastMessage</small>
                                            </div>
                                        </div>
                                    </a>
                                    <span class="badge bg-primary">@conversation.UnreadMessages</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Main Messaging Area -->
            <div class="col-md-8 col-lg-9">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body">
                        <h5 class="card-title">Chat</h5>
                        <div class="chat-box" style="height: 400px; overflow-y: auto;">
                            <!-- Example of chat messages -->
                            @if (Model.SelectedConversation != null)
                            {
                                foreach (var message in Model.SelectedConversation.Messages)
                                {
                                    if (message.SenderId == Model.CurrentUser.Id)
                                    {
                                        <div class="d-flex justify-content-end mb-3">
                                            <div>
                                                <p class="small p-2 me-3 mb-0 text-white bg-primary rounded">
                                                    @message.Content
                                                </p>
                                                <small class="text-muted">@message.Timestamp.ToString("hh:mm tt")</small>
                                            </div>
                                            <img src="https://via.placeholder.com/40" alt="User" class="rounded-circle ms-3">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-start mb-3">
                                            <img src="https://via.placeholder.com/40" alt="User" class="rounded-circle me-3">
                                            <div>
                                                <p class="small p-2 mb-0 bg-light rounded">@message.Content</p>
                                                <small class="text-muted">@message.Timestamp.ToString("hh:mm tt")</small>
                                            </div>
                                        </div>
                                    }
                                }
                            }
                            else
                            {
                                <p class="text-center text-muted">Select a conversation to start chatting!</p>
                            }
                        </div>

                        <!-- Input area -->
                        @if (Model.SelectedConversation != null)
                        {
                            <form method="post" action="/Home/SendMessage">
                                <div class="d-flex align-items-center mt-3">
                                    <input type="hidden" name="conversationId" value="@Model.SelectedConversation.Id" />
                                    <input type="text" name="messageContent" class="form-control" placeholder="Type a message" required>
                                    <button type="submit" class="btn btn-primary ms-3"><i class="fas fa-paper-plane"></i></button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
