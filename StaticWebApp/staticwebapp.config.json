{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "userDetailsClaim": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/f8e19048-0e11-4c82-9a02-c77c77aa7a29",
          "clientIdSettingName": "AZURE_CLIENT_ID",
          "clientSecretSettingName": "ZEBI"
        }
      }
    },
    "login": {
      "login": "/.auth/login/aad",
      "logout": "/.auth/logout",   
      "callback": "/index.html"    
    }
  },
  "routes": [
    {
      "route": "/",
      "allowedRoles": ["authenticated"] 
    },
    {
      "route": "/auth/login",
      "rewrite": "/index.html" 
    },
    {
      "route": "/index.html",
      "allowedRoles": ["authenticated"] 
    },
    {
      "route": "/*",
      "rewrite": "/index.html"
    }
  ]
}
