{
  "routes": [
    {
      "route": "/home.html",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/login.html",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/",
      "redirect": "/login.html",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/.auth/login/aad",
      "statusCode": 302
    },
    {
      "route": "/.auth/logout",
      "statusCode": 302
    }
  ],
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "clientId": "3ef5aac4-dabf-40ad-b133-e72dce761112",
          "clientSecretSettingName": "AAD_CLIENT_SECRET"
        }
      }
    }
  },
  "navigationFallback": {
    "rewrite": "/login.html",
    "exclude": ["/.auth/*"]
  }
}
